<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gexton.cashinvesternew">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/DrawerTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.UpdateProfileActivity" />
        <activity
            android:name=".activities.MapActivity"
            android:label="@string/title_activity_map" />
        <activity android:name=".activities.AddPropertyActivity" />
        <activity android:name=".activities.ViewImagesActivity" />
        <activity android:name=".activities.SinglePropertyActivity" />
        <activity android:name=".activities.BookmarkedPropertiesActivity" />
        <activity android:name=".activities.ManagePasswordActivity" />
        <activity android:name=".activities.SignupActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DashbordActivity" />
        <activity android:name=".activities.FindPropertyActivity" />
        <activity android:name=".activities.MessagesActivity" />
        <activity android:name=".activities.MyContactsActivity" />
        <activity android:name=".activities.MyProfileActivity" />
        <activity android:name=".activities.MyPropertiesActivity" />
        <activity android:name=".activities.SavedSearchesActivity" />
        <activity android:name=".activities.SupportTicketsActivity" />
        <activity android:name=".activities.BaseActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>